<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>



    <!-- Vrora tema. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>



    <!-- Moja test tema. -->
    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/ColorPrimary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_material_dark</item>

        <!--   theme UI controls like checkboxes and text fields -->
        <!--   native widgets will now be "tinted" with accent color -->
        <item name="colorAccent">@color/darkBlue</item>

        <!--Action bar style-->
        <item name="android:actionBarStyle">@style/AppTheme3.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme3.ActionBar</item>

    </style>

    <style name="AppTheme3.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme3.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme3.ActionBar.TitleText</item>
        <item name="android:height">40dip</item>
        <item name="height">40dip</item>
    </style>

    <style name="AppTheme3.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/primary_material_dark</item>
    </style>

</resources>
